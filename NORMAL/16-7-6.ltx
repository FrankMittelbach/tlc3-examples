\setlength\textwidth{105.0pt}

 %  Use biber program
 %% show second page

  \makeatletter
  \renewcommand\section{\@startsection{section}{1}{\z@}%
    {-1.25ex \@plus-1ex \@minus-.2ex}%
    {.5ex}%
    {\normalfont\normalsize\bfseries}}

% we need a trivial index environment with 1 column for the small example

  \renewenvironment{theindex}{\section*{\indexname}%
    \begin{flushleft}\let\item\@idxitem}{\end{flushleft}}

  \renewcommand\indexspace{\par}

  \makeatother

  \setlength\parindent{0pt}
  \setlength\parskip{0pt}

