\usepackage[poster]{tcolorbox}

\tcbset{placeholder/.style={enhanced jigsaw,
  size=small,sharp corners,colframe=red!50!black,
  interior style={bottom color=red!15!white,top color=yellow!15},
  opacityback=0.5,
  underlay={\draw[red!50!black,line cap=round] (interior.south west)--(interior.north east);
    \draw[red!50!black,line cap=round] (interior.south east)--(interior.north west);},
}}%

\AddToHook{begindocument/end}{%
\begin{tcbposter}[
    poster = {columns=5,rows=4, % set up raster
      spacing=1mm,              % spacing between elements
      width=140pt,height=120pt, %  - normally not needed
      showframe},               % and show it
    boxes = {sharp corners=downhill,colframe=blue} ]}
\AddToHook{enddocument}{\end{tcbposter}}

