           {name=title,column=1,span=3,row=1}{}
 \posterbox{name=graphic,column=4,span=2,
            row=1,rowspan=1.5}{}
 \posterbox{name=credits,column=3,span=3,above=bottom}{}
 \posterbox{name=table,column=4,span=2,
            between=graphic and credits}{}
 \posterbox{name=T,
   sequence=1 between title and bottom then
            2 between title and bottom then
            3 between title and credits}{}
