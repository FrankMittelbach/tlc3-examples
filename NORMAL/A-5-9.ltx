%StartShownPreambleCommands
\usepackage{ifthen}
\newcommand{\QU}[2]{%
 \ifthenelse{\(\equal{#1}{ENG}\and\equal{#2}{yes}\)
    \or      \(\equal{#1}{FRE}\and\equal{#2}{oui}\)}%
            {``OK''}{``not OK''}}
%StopShownPreambleCommands

\begin{document}
You agree \QU{ENG}{yes} or don't \QU{ENG}{no}. \par
D'accord  \QU{FRE}{oui} ou pas   \QU{FRE}{non}?
\end{document}
