\begin{document}
\begin{CheckList}[layout=table]{feature}
  \feature{n}{A new feature request}
  \feature{e}{Feature evaluated}
  \feature[label=foo,deadline=1.1.2022]
          {d}{dropped/declined}
  \feature[who=Frank,deadline=yesterday]
          {s}{started}
  \feature{f}{finished/implemented}
\end{CheckList}
\end{document}
