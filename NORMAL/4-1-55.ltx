\usepackage[tablepkg=tabularx]{typed-checklist}
  \setcounter{page}{1}

  \CheckListAddType{feature}{{\small\Square}}
  \CheckListAddStatus{feature}{n}{false}{}
  \CheckListAddStatus{feature}{d}{true} {\small\XSolid}
  \CheckListAddStatus{feature}{e}{false}{\raisebox{0.4ex}{\footnotesize e}}
  \CheckListAddStatus{feature}{s}{false}{\kern 1pt\small\ArrowBoldRightStrobe}
  \CheckListAddStatus{feature}{f}{true} {\kern 2pt\Checkmark}

