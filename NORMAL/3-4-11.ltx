%StartShownPreambleCommands
  \usepackage[ngerman,english]{babel}
  \usepackage[maxlevel=3,autostyle]{csquotes}
%StopShownPreambleCommands

\begin{document}
  \enquote{He said \enquote{I can speak
      \foreignquote{ngerman}{wunderbar} German.}}

  \selectlanguage{ngerman}
  \enquote{Er sagte \foreignquote{english}{I can speak
      \hyphenquote{ngerman}{wunderbar} German.}}
\end{document}
